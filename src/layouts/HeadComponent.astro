---
import { SEO } from "astro-seo";

const {
  title,
  description,
  noindex,
  nofollow,
  type = "website",
  image = `/softhardsystem.png`,
  width = 1024,
  height = 224,
  alt = "Soft Hard System",
  article,
  link,
  meta,
} = Astro.props;
---

<head lang="en-US">
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <style lang="scss" global> @use "../styles/astro.scss"; </style>

  <!-- prettier-ignore -->

  <SEO
    title={`${title} | Soft Hard System`}
    {description}
    {noindex}
    {nofollow}
    openGraph={{
      article,
      basic: {
        title,
        type,
        image: Astro.site.href.slice(0, -1) + image
      },
      optional: {
        description
      },
      image: {
        type: "image/png",
        width,
        height,
        alt
      }
    }}
    twitter={{
      card: "summary_large_image",
      creator: "@wafi_rafid",
    }}
    extend={{
      link: [
        {
          rel: "preload",
          href: "/fonts/itim-v5-latin-regular.woff2",
          as: "font",
          crossorigin: "anonymous",
        },
      ].concat(link),
      meta,
    }}
  />
</head>
