---
const {slug} = Astro.props;
---

<a href={slug} class="pushable group relative block max-w-max ml-auto hover:no-underline duration-200 hover:brightness-110">
  <span
    class="
      shadow
      absolute
      top-0
      left-0
      w-full
      h-full
      rounded-lg
      bg-gray-400
      translate-y-[0.125rem]
      transition-transform
      duration-500
      group-hover:translate-y-1
      group-hover:duration-200
      group-active:translate-y-[0.0625rem]
      group-active:duration-75
    "
  ></span>
  <span
    class="edge absolute top-0 left-0 w-full h-full rounded-lg py-3 px-10"
  ></span>
  <span
    class="
      front
      block
      relative
      rounded-lg
      py-3
      px-10
      text-white
      bg-[#3c72cf]
      text-lg
      -translate-y-2
      transition-transform
      duration-500
      group-hover:-translate-y-3
      group-hover:duration-200
      group-active:-translate-y-1
      group-active:duration-75
    "
  >
    Read More âžœ
  </span>
</a>
